@model MongoTutorial.Models.UpdateTodoViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <title>Güncelle</title>
</head>
<body>
    <center><h1>@Model.title Görevini Düzenle</h1></center>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
            
                <form method="post">
                    <input type="hidden" asp-for="TodoId" class="form-control" />
                    <input type="text" asp-for="title" class="form-control" />
                    <button class="btn btn-success w-100">Görevi Güncelle</button>
                </form>

            </div>
        </div>
    </div>

</body>
</html>
